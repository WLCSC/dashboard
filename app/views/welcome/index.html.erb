<table class="table">
<% Service.all.in_groups_of(4) do |group| %>
    <tr>
        <% group.each do |svc| %>
            <td width="25%">
                <% if svc %>
                    <%= link_to svc.name, svc.url, :class => svc.button_class %>
                <% end %>
            </td>
        <% end %>
    </tr>
<% end %>
</table>

<% Service.where(:server_id => nil).each do |s| %>
    <%= render :partial => 'services/svc', :locals => {:service => s} %>
<% end %>
