<!DOCTYPE html>
<html>
<head>
  <title>WLCSC IT Services Dashboard</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="container" style="margin-top: 1%;">
        <div class="row">
            <div class="span12">
                <div class="well" id="main">
                    <h1>WLCSC IT Services Dashboard</h1>
            
                    <%= yield %>

                    <% if admin? %>
                        <div style="text-align: center; margin-top: 8px;">
                            <%= link_to 'Home', root_path, :class => 'btn btn-mini' %>
                            <%= link_to 'Manage Services', services_path, :class => 'btn btn-mini btn-primary' %>
                            <%= link_to 'Exit Admin Mode', session_create_path(:password => ''), :class => 'btn btn-mini btn-inverse', :style => 'text-align: center;' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>  
</body>
</html>
