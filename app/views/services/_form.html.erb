<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
      <p>
      <%= f.label :external %>
      <%= f.check_box :external %>
      </p>

      <p>
      <%= f.label :technical %>
      <%= f.check_box :technical %>
      </p>
  </div>
  <div class="field">
    <%= f.label :github %><br>
    <%= f.text_field :github %>
  </div>
  <div class="field">
    <%= f.label :server_id %><br>
    <%= f.select :server_id, [["None", nil]] + Service.all.map{|s| [s.name, s.id]} %>
  </div>
  <div class="actions">
      <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
